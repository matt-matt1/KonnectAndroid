<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<layer-list>
<!--			shadow-->
			<item android:right="4dp" android:top="4dp">
				<shape>
					<corners android:radius="4dp" />
					<solid android:color="@color/shadow" />
				</shape>
			</item>
<!--			main inc. border-->
			<item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
				<shape>
					<gradient android:angle="270"
						android:endColor="@color/blue_carolina" android:startColor="@color/blue_olympic" />
					<stroke android:width="1dp" android:color="@color/black" />
					<corners android:radius="2dp" />
					<padding android:bottom="5dp" android:left="4dp"
						android:right="3dp" android:top="5dp" />
				</shape>
			</item>
		</layer-list>
	</item>
</selector>