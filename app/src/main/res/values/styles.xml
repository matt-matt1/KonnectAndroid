        <item name="colorAccent">@color/Emerald</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

	<style name="searchTextHiglight"></style>

<!--    alert dialog theme-->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
<!--	    <item name="android:borderlessButtonStyle">@style/Widget.Sphinx.Button.Borderless</item>-->
<!--	    <item name="android:buttonBarStyle">@style/Sphinx.ButtonBar.AlertDialog</item>-->
	    <item name="buttonBarStyle">@style/Widget.AppCompat.ButtonBar</item>
	    <item name="buttonBarButtonStyle">@style/MyButtonStyle</item>
	    <item name="buttonBarPositiveButtonStyle">@style/MyButtonStyle</item>
	    <item name="buttonBarNegativeButtonStyle">@style/MyButtonStyle</item>
	    <item name="buttonBarNeutralButtonStyle">@style/MyButtonStyle</item>
