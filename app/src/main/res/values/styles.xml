        <item name="android:textColorPrimary">@android:color/white</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>

<!--	form field label-->
	<style name="FormFieldLabel">
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#111111</item>
	</style>

<!--	form field entry-->
	<style name="FormFieldEntry">
		<item name="android:layout_marginLeft">24dp</item>
		<item name="android:layout_marginRight">24dp</item>
<!--		<item name="android:background">@color/White</item>-->
<!--		<item name="android:line">@android:h</item>-->
		<item name="android:paddingLeft">24dp</item>
		<item name="android:paddingRight">24dp</item>
		<item name="android:paddingBottom">24dp</item>
		<item name="android:textColor">#555555</item>
	</style>

	<style name="MyButtonStyle" parent="@style/TextAppearance.AppCompat.Widget.Button.Inverse">
		<item name="android:textColor">@android:color/black</item>
	</style>
